  <br>
  <h3>TAREAS CREADAS</h3>
  {{{mis-tareas}}}

  <h3>CREAR UNA TAREA</h3>
  <form action="/crear-tarea" method="post">
    <label>Ingrese nombre de la tarea</label>
    <input class="form-control" type="text" name="nombre_tarea" required>
    <br>
    <label>Ingrese Fecha límite</label>
    <input class="form-control" type="date" name="fecha_limite" required>
    <br>
    <label>Ingrese Descripcion de la tarea</label>
    <textarea name="descripcion" cols=50 rows=6>Breve descripción de la tarea</textarea>
    <br>
    <button class="btn btn-dark" >Crear Tarea</button>
  </form>

